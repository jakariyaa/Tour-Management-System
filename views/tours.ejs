<%- include('partials/header') %>

<main>
  <div class="text-center mb-5 mt-4">
    <h1>Explore Our Tours</h1>
  </div>
  <div class="row mb-5">
    <% tours.forEach(tour => { %>
    <div class="col-lg-4 col-md-6 mb-4">
      <div class="card h-100 animated-card">
        <img
          src="<%= tour.image_url || 'https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=766&q=80' %>"
          class="card-img-top h-100"
          alt="<%= tour.title %>"
        />
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= tour.title %></h5>
          <p class="card-text text-muted">
            <i class="fas fa-map-marker-alt"></i> <%= tour.location %>
          </p>
          <p class="card-text h4 fw-bold text-primary">$<%= tour.price %></p>
          <a href="/tours/<%= tour.id %>" class="btn btn-primary mt-auto"
            >View Details</a
          >
        </div>
      </div>
    </div>
    <% }); %>
  </div>
</main>

<%- include('partials/footer') %>
