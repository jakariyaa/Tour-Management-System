<%- include('partials/header') %>

<main>
  <div class="card animated-card">
    <div class="row g-0">
      <div class="col-md-6">
        <img
          src="<%= tour.image_url || 'https://images.unsplash.com/photo-1523906834658-6e24ef2386f9?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=766&q=80' %>"
          class="img-fluid rounded-start"
          alt="<%= tour.title %>"
        />
      </div>
      <div class="col-md-6">
        <div class="card-body p-4">
          <h1 class="card-title display-5"><%= tour.title %></h1>
          <p class="card-text lead"><%= tour.description %></p>
          <p class="card-text h5">
            <i class="fas fa-map-marker-alt text-primary"></i>
            <strong>Location:</strong> <%= tour.location %>
          </p>
          <p class="card-text h3 fw-bold text-success mt-3">
            <strong>Price:</strong> $<%= tour.price %>
          </p>
          <a href="#" class="btn btn-primary btn-lg mt-4">Book Now</a>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
