<%- include('../partials/header') %>

<main>
  <div
    class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom"
  >
    <h1 class="h2"><i class="fas fa-tachometer-alt"></i> Admin Dashboard</h1>
  </div>

  <!-- Dashboard Stats -->
  <div class="row">
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="card text-white bg-primary dashboard-stat">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title text-white">Total Tours</h5>
              <p class="card-text fs-2"><%= tours.length %></p>
            </div>
            <i class="fas fa-route fa-3x"></i>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6 col-lg-3 mb-4">
      <div class="card text-white bg-success dashboard-stat">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center">
            <div>
              <h5 class="card-title text-white">Registered Users</h5>
              <p class="card-text fs-2"><%= users.length %></p>
            </div>
            <i class="fas fa-users fa-3x"></i>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Tours Management -->
  <div class="card animated-card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h2 class="h4 mb-0"><i class="fas fa-route"></i> Manage Tours</h2>
      <a href="/admin/tours/add" class="btn btn-sm btn-primary">
        <i class="fas fa-plus"></i> Add New Tour
      </a>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Title</th>
              <th>Location</th>
              <th>Price</th>
              <th class="text-end">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% tours.forEach(tour => { %>
            <tr>
              <td><%= tour.title %></td>
              <td><%= tour.location %></td>
              <td>$<%= tour.price %></td>
              <td class="text-end">
                <a
                  href="tours/<%= tour.id %>/edit"
                  class="btn btn-sm btn-outline-primary"
                  >Edit</a
                >
                <form
                  action="/admin/tours/delete/<%= tour.id %>"
                  method="POST"
                  class="d-inline"
                >
                  <button type="submit" class="btn btn-sm btn-outline-danger">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Users Management -->
  <div class="card animated-card">
    <div class="card-header">
      <h2 class="h4 mb-0"><i class="fas fa-users-cog"></i> Manage Users</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-hover">
          <thead class="table-light">
            <tr>
              <th>Username</th>
              <th>Role</th>
            </tr>
          </thead>
          <tbody>
            <% users.forEach(user => { %>
            <tr>
              <td><%= user.username %></td>
              <td><span class="badge bg-secondary"><%= user.role %></span></td>
            </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>

<%- include('../partials/footer') %>
