<%- include('partials/header') %>

<main>
  <div class="row justify-content-center mb-3 mt-3">
    <div class="col-md-8">
      <div class="card animated-card">
        <div class="card-header">
          <h2 class="mb-0">Edit Tour</h2>
        </div>
        <div class="card-body">
          <form action="/admin/tours/<%= tour.id %>/edit" method="POST">
            <div class="mb-3">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                value="<%= tour.title %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                id="description"
                name="description"
                rows="4"
                required
              >
<%= tour.description %></textarea
              >
            </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input
                type="text"
                class="form-control"
                id="location"
                name="location"
                value="<%= tour.location %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="price" class="form-label">Price ($)</label>
              <input
                type="number"
                class="form-control"
                id="price"
                name="price"
                step="0.01"
                value="<%= tour.price %>"
                required
              />
            </div>
            <div class="mb-3">
              <label for="image_url" class="form-label">Image URL</label>
              <input
                type="url"
                class="form-control"
                id="image_url"
                name="image_url"
                value="<%= tour.image_url || '' %>"
              />
            </div>
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
              <a href="/tours/<%= tour.id %>" class="btn btn-secondary"
                >Cancel</a
              >
              <button type="submit" class="btn btn-primary">Update Tour</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') %>
